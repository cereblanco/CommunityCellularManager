<!-- helpdesk SMS -->

<!-- send everything else to the cloud and let them sort it out -->
<extension name="helpdesk_route">
  <condition field="${vbts_tp_dest_address}" expression="^911$"/>
    <action inline="true" application="set" data="service_type=free_sms"/>
    <action application="system" data='curl -d "from_name=${from_imsi}&service_type=${service_type}&from_number=${vbts_callerid}&to=${vbts_canonical_tp_dest_address}&body=${vbts_text}" http://127.0.0.1/helpdesk_sms'/>
    <action application="system" data='curl --data "from_number=${vbts_callerid}&from_name=${from_imsi}&service_type=${service_type}&destination=${vbts_tp_dest_address}" http://127.0.0.1/smscdr'/>
  </condition>
</extension>
